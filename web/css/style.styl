$red = #C25400
$darkRed = #803500
$indigo = #595959
$blue = #3675B7

$maxWidth = 1054px;

$bgColor = white
$headingColor = #1d2226
$bodyColor = #2e3136

body
  background-color white

.container, container-fluid {
  margin-right: auto;
  margin-left: auto;
}

p
  margin-bottom 20px

container
  min-width: 1030px;
  max-width: $maxWidth;

.container-fluid
  background-color white
  max-width 100%

div.container-fluid#content
  background-color white

div.narrow
  margin-right: auto;
  margin-left: auto;
  max-width 924px

ul#main-content
  padding-left 0
  margin-left auto
  margin-right auto

div.row.rowFixed
  background-color $bgColor
  max-width 1054px


span.by-line
  font-size 12px
  color #7f7f7f

hr.spacer-25 {
  opacity 0
  margin-bottom 25px
}

div.take-text
  font-weight 600
  font-size 18px
  margin-bottom 25px

img.take-pic
  margin-bottom 40px


#eduviz > div > div:nth-child(1)
  font-family: 'Open Sans', sans-serif;
  font-size 16px
  line-height 1.5
  color $bodyColor

#eduviz > div.container-fluid,
#eduviz > div.container
  font-family: 'Open Sans', sans-serif;
  font-size 16px
  line-height 27px
  color $bodyColor

  a
    color $red


span.idTag
  visibility none

/*** FOR LISTS ***/
#glossary
  display:none; /* assume smaller screen first */

  position: fixed;
  top: 3.85rem;
  left: 85%;
  opacity: 0.95;

  color $red

  li
    font-size 13px
    text-align beginning
    margin-top 2px

    a
      border-left 1px solid transparent
      padding-left 8px
      padding-right 8px



/* if screen size gets wider than specified width  */
@media screen and (min-width:1360px){
  #glossary {
    display:block;
  }
}

ul
  list-style: none

ul.diamonds
  padding-left 0
  list-style-position outside
  list-style: none

.diamonds li
  margin-top 15px
  margin-left 25px
  position relative
  padding-bottom 15px
  border-bottom 1px solid rgba(90, 90, 90, 0.15)

.diamonds li::before {
  content: " ";
  color: rgba(62,62,71,0.8);
  line-height: 1.5;
  background-color: #BE5500;
  width: 7px;
  height: 7px;
  position: absolute;
  left: -20px;
  top: 10px;
  transform: rotate(45deg);
  transform-origin: 50% 50%;
}


h1
  text-align: left
  color $headingColor
  font-size 30px
  font-family: 'Montserrat', sans-serif;
  letter-spacing: 2px

  padding-left: 5px;
  padding-top: 8px;
  padding-bottom: 8px;
  border-top: 2px solid $red;
  border-bottom: 2px solid $red;
  margin-bottom 25px

h3
  font-weight: 600
  color $headingColor
  font-size 24px
  margin-bottom 20px

/* UI COMPONENTS */
button.btn#buttonLink {
  background-color #d5d5d5
}

table#dataTable
  font-size 13px
  background-color

/* TABLEAU CONTAINER */
.tableauPlaceholder
  background-color white
  margin-left auto
  margin-right auto

.tab-toolbar
  background-color white





  /* Nav and logo stuff */
#edu-brand
  color $red
